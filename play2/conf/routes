# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                            controllers.Application.index()

GET     /edit                        controllers.Application.editView()

POST    /edit/handle                 controllers.Application.handleEdit()

GET     /blog                         controllers.Application.all()

GET     /blog/:id                     controllers.Application.blog(id: String)

POST    /blog                         controllers.Application.createBlog()

POST     /blog/:id/:user/comment       controllers.Application.addOrReplaceComment(id: String, user:String, ids: String = "")

POST     /blog/:id/:user/comment/*ids       controllers.Application.addOrReplaceComment(id: String, user:String, ids: String)



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                 controllers.Assets.at(path="/public", file)

